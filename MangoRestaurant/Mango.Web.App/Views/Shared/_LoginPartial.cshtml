<ul class="navbar-nav">
    @if(User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-white" href="#">Hello @User.Identity.Name</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-action="Logout" asp-controller="Home">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-action="Login" asp-controller="Home">Login</a>
        </li>
    }
</ul>
